{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true, // To generate .d.ts files for your SDK
    "emitDeclarationOnly": true // Only emit .d.ts files
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}